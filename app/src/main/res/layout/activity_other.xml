<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/openGdrive"
        android:layout_width="327dp"
        android:layout_height="54dp"
        android:text="OPEN GDRIVE"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/openGmail"
        android:layout_width="327dp"
        android:layout_height="54dp"
        android:text="OPEN GMAIL"
        app:layout_constraintBottom_toTopOf="@+id/openGdrive"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/openYoutube" />

    <Button
        android:id="@+id/displayMessages"
        android:layout_width="327dp"
        android:layout_height="54dp"
        android:text="DISPLAY MESSAGES"
        app:layout_constraintBottom_toTopOf="@+id/displayPhotos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/openGdrive" />

    <Button
        android:id="@+id/openYoutube"
        android:layout_width="327dp"
        android:layout_height="54dp"
        android:text="OPEN YOUTUBE"
        app:layout_constraintBottom_toTopOf="@+id/openGdrive"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.494" />

    <Button
        android:id="@+id/displayPhotos"
        android:layout_width="327dp"
        android:layout_height="54dp"
        android:text="DISPLAY PHOTOS"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/openGdrive" />

</androidx.constraintlayout.widget.ConstraintLayout>